      <div class="row">
        <hr class="linea" align="center" width="90%"><br>
        <div class="col-md-2 col-md-offset-1">
          <div class="titulo"><strong>SKILLS:</strong></div>
        </div>
        <div class="col-md-7">
          <ul class="subtitulos">

            <ul class="subtitulos">
              <% @curriculum.skills.each do |a| %>
                <li><%= a %></li>
              <% end %>
            </ul>

          </ul>
        </div>
      </div>

      <div class="row">
        <hr class="linea" align="center" width="90%"><br>
        <div class="col-md-2 col-md-offset-1">
          <div class="titulo"><strong>EDUCATION:</strong></div>
