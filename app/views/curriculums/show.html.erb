        <hr class="linea" align="center" width="90%">
      </div><br>

      <div class="row segunda">
        <div class="col-md-3 col-md-offset-1 segunda">
          <div class="titulo"><strong>AVAILABILITY:</strong></div>
            <%= @curriculum.availability %>
          <br>
          <br>
        </div>
